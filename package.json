{
  "name": "Scoores",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "pnpm install --silent && rm -Rf .next && next build",
    "start": "next start",
    "preview": "npx serve out --ssl-cert ~/localhost.pem --ssl-key ~/localhost-key.pem",
    "lint": "next lint",
    "postcap:sync": "node scripts/convert-webp-to-png.js",
    "clean-prettier": "prettier --write ./src",
    "build:app": "pnpm install --silent && pnpm postcap:sync && cross-env NEXT_PUBLIC_IS_APP=true next build && rm -Rf out/apps",
    
    "assets:android": "capacitor-assets generate --android",
    "assets:ios": "capacitor-assets generate --ios",
    "assets:all": "capacitor-assets generate",

    "mobile:build": "pnpm build:app && pnpm assets:all && pnpm cap sync",
    "mobile:copy": "pnpm cap copy",
    "mobile:sync": "pnpm build:app && pnpm assets:all && pnpm cap sync",
    "mobile:android": "pnpm mobile:build && pnpm cap open android",
    "mobile:ios": "pnpm mobile:build && pnpm cap open ios",
    "mobile:emulate": "pnpm mobile:build && cd android && ./gradlew installDebug && adb shell monkey -p com.scoores.mobile -c android.intent.category.LAUNCHER 1"
  },
  "rules": {
    "react/no-is-mounted": "off"
  },
  "dependencies": {
    "@capacitor/android": "^7.4.3",
    "@capacitor/core": "^7.4.3",
    "@capacitor/haptics": "^7.0.2",
    "@capacitor/ios": "^7.4.3",
    "@capacitor/splash-screen": "^7.0.3",
    "install": "^0.13.0",
    "next": "15.5.4",
    "next-pwa": "^5.6.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "serve": "14.2.5",
    "sharp": "^0.34.4",
    "use-sound": "^5.0.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^7.4.3",
    "@capacitor/core": "^7.4.3",
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "babel-loader": "^10.0.0",
    "cross-env": "^10.1.0",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "postcss": "^8",
    "sass": "^1.85.1",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.19.2",
    "typescript": "^5"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "^19.0.3",
      "@types/react-dom": "^19.0.2"
    }
  }
}
